<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="triped">

  <link name="chassis" />
  <link name="swing_left" />
  <link name="swing_right" />
  <link name="extend" />
  
  <joint name="swing_joint_left" type="revolute">
    <parent link="chassis" />
    <child link="swing_left" />
    <axis xyz="0 0 1" />
    <limit effort="1000.0" lower="${-pi/2}" upper="${pi/2}" velocity="0.5"/>
    <origin xyz="0 0 0" rpy="0 0 0" />
  </joint>
  
  <joint name="swing_joint_right" type="revolute">
    <parent link="chassis" />
    <child link="swing_right" />
    <axis xyz="0 0 1" />
    <limit effort="1000.0" lower="${-pi/2}" upper="${pi/2}" velocity="0.5"/>
    <origin xyz="0 0 0" rpy="0 0 0" />
  </joint>

  <joint name="extend_joint" type="revolute">
    <parent link="chassis" />
    <child link="extend" />
    <axis xyz="0 0 1" />
    <limit effort="1000.0" lower="${-pi/2}" upper="${pi/2}" velocity="0.5"/>
    <origin xyz="0 0 0" rpy="0 0 0" />
  </joint>

</robot>
